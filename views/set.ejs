<!DOCTYPE html>
<html data-theme="dark" lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lego Set Details</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { page: '', activeTheme: set.theme }) %>

  <!-- Hero -->
  <div class="container mx-auto mt-10">
    <div class="hero bg-base-100 rounded-lg p-0">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="bg-base-200 p-6">
            <h1 class="text-5xl font-bold" id="setName"></h1>
            <p id="setBlurb"></p>
            <img id="setImg" alt="Lego Set Image" style="width: 300px; height: auto;">
            <p><strong>Year:</strong> <span id="setYear"></span></p>
            <p><strong>Theme:</strong> <span id="setTheme"></span></p>
            <p><strong>Number of Parts:</strong> <span id="setNumParts"></span></p>
            <p id="quote"></p>
            <a href="#" onclick="history.back(); return false;">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
        const set = <%- JSON.stringify(set) %>;

      document.getElementById("setName").textContent = set.name;
      document.getElementById("setBlurb").textContent = `Below, you will find detailed information about the set: "${set.name}"`;
      document.getElementById("setImg").src = set.img_url;
      document.getElementById("setYear").textContent = set.year;
      document.getElementById("setTheme").textContent = set.theme;
      document.getElementById("setNumParts").textContent = set.num_parts;

      fetch("https://quotable.io/random")
        .then(response => response.json())
        .then(data => {
          document.getElementById("quote").textContent = `"${data.content}" - ${data.author}`;
        })
        .catch(error => console.error("Error fetching quote:", error));
    });
  </script>
</body>
</html>
