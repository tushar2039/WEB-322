<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set - <%= set.name %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', { page: '' }) %>
    <div class="container mx-auto p-5">
        <h1 class="text-4xl font-bold text-center mb-4">Edit Set - <%= set.name %></h1>
        <form action="/lego/editSet" method="POST" class="space-y-4">
            <input type="hidden" name="set_num" value="<%= set.set_num %>">
            <div>
                <label for="name" class="block mb-2">Name:</label>
                <input type="text" id="name" name="name" value="<%= set.name %>" required class="input input-bordered w-full max-w-xs">
            </div>
            <div>
                <label for="year" class="block mb-2">Year:</label>
                <input type="number" id="year" name="year" value="<%= set.year %>" required class="input input-bordered w-full max-w-xs">
            </div>
            <div>
                <label for="num_parts" class="block mb-2">Number of Parts:</label>
                <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="input input-bordered w-full max-w-xs">
            </div>
            <div>
                <label for="img_url" class="block mb-2">Image URL:</label>
                <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="input input-bordered w-full max-w-xs">
            </div>
            <div>
                <label for="theme_id" class="block mb-2">Theme:</label>
                <select id="theme_id" name="theme_id" required class="select select-bordered w-full max-w-xs">
                    <% themes.forEach(theme => { %>
                        <option <%= set.theme_id == theme.id ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update Set</button>
            </div>
        </form>
    </div>
</body>
</html>
