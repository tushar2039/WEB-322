<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Add Lego Set</title>
</head>
<body>
  <%- include('partials/navbar') %>
  <section class="container mx-auto p-5">
    <h1 class="text-4xl font-bold text-center mb-4">Add New Lego Set</h1>
    <form action="/lego/addSet" method="POST" class="space-y-4">
      <div>
        <label for="name" class="block mb-2">Name:</label>
        <input type="text" id="name" name="name" required class="input input-bordered w-full max-w-xs">
      </div>
      <div>
        <label for="year" class="block mb-2">Year:</label>
        <input type="number" id="year" name="year" required class="input input-bordered w-full max-w-xs">
      </div>
      <div>
        <label for="num_parts" class="block mb-2">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" required class="input input-bordered w-full max-w-xs">
      </div>
      <div>
        <label for="img_url" class="block mb-2">Image URL:</label>
        <input type="url" id="img_url" name="img_url" required class="input input-bordered w-full max-w-xs">
      </div>
      <div>
        <label for="theme_id" class="block mb-2">Theme:</label>
        <select id="theme_id" name="theme_id" required class="select select-bordered w-full max-w-xs">
          <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>"><%= theme.name %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label for="set_num" class="block mb-2">Set Number:</label>
        <input type="text" id="set_num" name="set_num" required class="input input-bordered w-full max-w-xs">
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Set</button>
      </div>
    </form>
  </section>
</body>
</html>
